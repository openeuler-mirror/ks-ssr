<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE node PUBLIC "-//freedesktop//DTD D-BUS Object Introspection 1.0//EN" "http://www.freedesktop.org/standards/dbus/1.0/introspect.dtd">
<node xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd">
    <interface name="com.kylinsec.SSR.BR">

        <method name="SetStandardType">
            <arg type="u" name="standard_type" direction="in">
                <summary>The security reinforcement standard type.</summary>
            </arg>
            <description>Set the standard type.</description>
        </method>

        <method name="ImportCustomRS">
            <arg type="s" name="encoded_standard" direction="in">
                <summary>The encoded reinforcement standard.</summary>
            </arg>
            <description>Import the encoded custom reinforcement standard.</description>
        </method>

        <method name="SetStrategyType">
            <arg type="u" name="strategy_type" direction="in">
                <summary>The security reinforcement strategy type.</summary>
            </arg>
            <description>Set the strategy type.</description>
        </method>

        <method name="SetTimeScan">
            <arg type="u" name="time_scan" direction="in">
                <summary>The timing scanning time.</summary>
            </arg>
            <description>Method of setting the timing scanning time.</description>
        </method>

        <method name="SetNotificationStatus">
            <arg type="u" name="notification_status" direction="in">
                <summary>The security reinforcement notification status.</summary>
            </arg>
            <description>Method of setting foreground notification prompt.</description>
        </method>

        <method name="SetFallbackStatus">
            <arg type="u" name="fallback_status" direction="in">
                <summary>The security reinforcement fallback status.</summary>
            </arg>
            <description>Set the fallback status.</description>
        </method>

        <method name="ImportCustomRA">
            <arg type="s" name="encoded_strategy" direction="in">
                <summary>The encoded reinforcement strategy.</summary>
            </arg>
            <description>Import the encoded custom reinforcement strategy.</description>
        </method>

        <method name="SetCheckBox">
            <arg type="s" name="reinforcement_name" direction="in">
                <summary>Name of reinforcement item.</summary>
            </arg>
            <arg type="b" name="checkbox_status" direction="in">
                <summary>Check whether the check box is checked.</summary>
            </arg>
            <description>Set check box selection status.</description>
        </method>

        <method name="SetResourceMonitorSwitch">
            <arg type="u" name="resource_monitor" direction="in">
                <summary>The security reinforcement resource monitor switch.</summary>
            </arg>
            <description>Set the resource monitor switch.</description>
        </method>

        <method name="GetCategories">
            <arg type="s" name="categories" direction="out">
                <summary>The categories is a xml string.</summary>
            </arg>
            <description>Get the categories information of BR.</description>
        </method>

        <method name="GetRS">
            <arg type="s" name="encrypted_rs" direction="out">
                <summary>The reinforcement standard is a base64 encrypted xml.</summary>
            </arg>
            <description>Get the reinforcement standard .</description>
        </method>

        <method name="GetReinforcements">
            <arg type="s" name="reinforcements" direction="out">
                <summary>The reinforcements is a json string.</summary>
            </arg>
            <description>Get the reinforcements information of BR.</description>
        </method>

        <method name="ResetReinforcements">
            <description>Reset all reinforcemnt info to default value.</description>
        </method>

        <method name="GetReinforcement">
            <arg type="s" name="name" direction="in">
                <summary>The reinforcement name.</summary>
            </arg>
            <arg type="s" name="encrypted_reinforcement" direction="out">
                <summary>The reinforcement is a json string.</summary>
            </arg>
            <description>Get the reinforcement information.</description>
        </method>

        <method name="SetReinforcement">
            <arg type="s" name="reinforcement_xml" direction="in">
                <summary>The reinforcement info.</summary>
            </arg>
            <description>Set the custom reinforcement.</description>
        </method>

        <method name="ResetReinforcement">
            <arg type="s" name="name" direction="in">
                <summary>The reinforcement name.</summary>
            </arg>
            <description>Reset the reinforcemnt info to default value.</description>
        </method>

        <method name="Scan">
            <arg type="as" name="names" direction="in">
                <summary>The scanned reinforcent names.</summary>
            </arg>
            <arg type="x" name="job_id" direction="out">
                <summary>The job id.</summary>
            </arg>
            <description>Scan specified reinforcements.</description>
        </method>

        <method name="Reinforce">
            <arg type="as" name="names" direction="in">
                <summary>The reinforced reinforcent names..</summary>
            </arg>
            <arg type="x" name="job_id" direction="out">
                <summary>The job id.</summary>
            </arg>
            <description>Reinforce these items specified by reinforcements.</description>
        </method>

        <method name="Cancel">
            <arg type="x" name="job_id" direction="in">
                <summary>The job id.</summary>
            </arg>
            <description>Cancel a job.</description>
        </method>

        <method name="SetFallback">
            <arg type="u" name="snapshot_status" direction="in">
                <summary>The security reinforcement snapshot status.</summary>
            </arg>
            <description>Set fallback function.</description>
        </method>

        <property name="version" type="s" access="read">
            <annotation name="org.freedesktop.DBus.Property.EmitsChangedSignal" value="true"/>
            <description>The BR version.</description>
        </property>

        <property name="standard_type" type="u" access="read">
            <annotation name="org.freedesktop.DBus.Property.EmitsChangedSignal" value="true"/>
            <description>The standard type.</description>
        </property>

        <property name="strategy_type" type="u" access="read">
            <annotation name="org.freedesktop.DBus.Property.EmitsChangedSignal" value="true"/>
            <description>The strategy type.</description>
        </property>

        <property name="time_scan" type="u" access="read">
            <annotation name="org.freedesktop.DBus.Property.EmitsChangedSignal" value="true"/>
            <description>The time scan.</description>
        </property>

        <property name="notification_status" type="u" access="read">
            <annotation name="org.freedesktop.DBus.Property.EmitsChangedSignal" value="true"/>
            <description>The notification status.</description>
        </property>

        <property name="resource_monitor" type="u" access="read">
            <annotation name="org.freedesktop.DBus.Property.EmitsChangedSignal" value="true"/>
            <description>The resource monitor switch.</description>
        </property>

        <property name="fallback_status" type="u" access="read">
            <description>The fallback status.</description>
        </property>

        <signal name="ScanProgress">
            <arg name="progress" type="s">
                <summary>The progress is a json string.</summary>
            </arg>
            <description>Emit when the scan progress is changed.</description>
        </signal>

        <signal name="ReinforceProgress">
            <arg name="progress" type="s">
                <summary>The progress is a json string.</summary>
            </arg>
            <description>Emit when the reinforcement progress is changed.</description>
        </signal>

        <signal name="HomeFreeSpaceRatioLower">
            <arg name="ratio" type="s">
                <summary>The ratio.</summary>
            </arg>
            <description>Home free space less than 10%.</description>
        </signal>

        <signal name="RootFreeSpaceRatioLower">
            <arg name="ratio" type="s">
                <summary>The ratio.</summary>
            </arg>
            <description>Root free space less than 10%.</description>
        </signal>

        <signal name="CpuAverageLoadRatioHigher">
            <arg name="ratio" type="s">
                <summary>The ratio.</summary>
            </arg>
            <description>The average load of a single core CPU exceeds 1.</description>
        </signal>

        <signal name="MemoryAbnormal">
            <arg name="ratio" type="s">
                <summary>The ratio.</summary>
            </arg>
            <description>Memory space less than 10%.</description>
        </signal>

        <signal name="ProgressFinished">
            <description>Scan or reinforce finished.</description>
        </signal>

    </interface>
</node>
