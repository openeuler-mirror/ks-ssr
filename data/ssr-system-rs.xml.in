<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<ssr_rs>
    <head>
        <name>CUSTOM_CLASS_I_SAFETY_STANDARD</name>
        <_label>Level I safety standard</_label>
        <version>1.0.0</version>
    </head>
    <body>
        <!-- 网络类 -->
        <reinforcement>
            <name>network-firewalld-switch</name>
            <arg>
                <name>enabled</name>
                <value>true</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>true</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Turn on system firewall service</_label>
                </layout>
            </arg>
            <arg>
                <name>ports</name>
                <value>""</value>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Opened ports</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>network-sysctl-icmp-redirect</name>
            <arg>
                <name>enabled</name>
                <value>false</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>false</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Turn on ICMP redirection</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>network-sysctl-syn-flood</name>
            <arg>
                <name>enabled</name>
                <value>true</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>true</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Prevent syn flood attacks</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>network-sysctl-source-route</name>
            <arg>
                <name>enabled</name>
                <value>false</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>false</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Turn on IP source routing</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>network-firewalld-icmp-timestamp</name>
            <arg>
                <name>timestamp_request</name>
                <value>false</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>false</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Allow ICMP timestamp query</_label>
                </layout>
            </arg>
        </reinforcement>
        <!-- 配置类 -->
        <reinforcement>
            <name>config-sendmail-switch</name>
            <arg>
                <name>enabled</name>
                <value>false</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>false</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Turn off sendmail service</_label>
                </layout>
            </arg>
        </reinforcement>
        <!-- 审计类 -->
        <reinforcement>
            <name>audit-auditd-switch</name>
            <arg>
                <name>enabled</name>
                <value>true</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>true</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Turn on system auditd service</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>audit-logrotate-rotate</name>
            <arg>
                <name>rotate</name>
                <value>8</value>
                <rule>
                    <type>RANGE</type>
                    <value_range>
                        <min_value>8</min_value>
                    </value_range>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>System log save cycle</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>audit-logfile-permissions</name>
            <arg>
                <name>mode-permissions-limit</name>
                <value>true</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>true</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>The maximum permission of log files and configurations is set to 0644</_label>
                </layout>
            </arg>
            <arg>
                <name>append-permissions-limit</name>
                <value>true</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>true</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Log files can only be appended</_label>
                </layout>
            </arg>
        </reinforcement>
        <!-- 接入类 -->
        <reinforcement>
            <name>external-radio-switch</name>
            <arg>
                <name>enabled</name>
                <value>false</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>false</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Disable radio network</_label>
                </layout>
            </arg>
        </reinforcement>
    </body>
</ssr_rs>