<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<ssr_rs>
    <head>
        <name>CUSTOM_CLASS_I_SAFETY_STANDARD</name>
        <_label>Level I safety standard</_label>
        <version>1.0.0</version>
    </head>
    <body>
        <!-- 网络类 -->
        <reinforcement>
            <name>network-firewalld-switch</name>
            <arg>
                <name>enabled</name>
                <value>true</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>true</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Turn on system firewall service</_label>
                </layout>
            </arg>
            <arg>
                <name>ports</name>
                <value>""</value>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Opened ports</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>network-sysctl-icmp-redirect</name>
            <arg>
                <name>enabled</name>
                <value>false</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>false</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Turn on ICMP redirection</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>network-sysctl-syn-flood</name>
            <arg>
                <name>enabled</name>
                <value>true</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>true</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Prevent syn flood attacks</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>network-sysctl-source-route</name>
            <arg>
                <name>enabled</name>
                <value>false</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>false</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Turn on IP source routing</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>network-firewalld-icmp-timestamp</name>
            <arg>
                <name>timestamp_request</name>
                <value>false</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>false</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Allow ICMP timestamp query</_label>
                </layout>
            </arg>
        </reinforcement>
        <!-- 配置类 -->
        <reinforcement>
            <name>config-sendmail-switch</name>
            <arg>
                <name>enabled</name>
                <value>false</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>false</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Turn off sendmail service</_label>
                </layout>
            </arg>
        </reinforcement>
        <!-- 审计类 -->
        <reinforcement>
            <name>audit-auditd-switch</name>
            <arg>
                <name>enabled</name>
                <value>true</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>true</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Turn on system auditd service</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>audit-logrotate-rotate</name>
            <arg>
                <name>rotate</name>
                <value>8</value>
                <rule>
                    <type>RANGE</type>
                    <value_range>
                        <min_value>8</min_value>
                    </value_range>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>System log save cycle</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>audit-logfile-permissions</name>
            <arg>
                <name>mode-permissions-limit</name>
                <value>true</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>true</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>The maximum permission of log files and configurations is set to 0644</_label>
                </layout>
            </arg>
            <arg>
                <name>append-permissions-limit</name>
                <value>true</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>true</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Log files can only be appended</_label>
                </layout>
            </arg>
        </reinforcement>
        <!-- 接入类 -->
        <reinforcement>
            <name>external-udev-cdrom</name>
            <arg>
                <name>enabled</name>
                <value>false</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>false</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Allow to use CD-ROM device</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>external-udev-usb</name>
            <arg>
                <name>enabled</name>
                <value>false</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>false</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Allow to use USB device</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>external-udev-ttys</name>
            <arg>
                <name>enabled</name>
                <value>false</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>false</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Allow to use serial port device</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>external-accounts-login-limit</name>
            <arg>
                <name>enabled</name>
                <value>true</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>true</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Restrict system independent user login</_label>
                </layout>
            </arg>
            <arg>
                <name>permission-users</name>
                <value>""</value>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Allow account retention</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>external-accounts-null-password</name>
            <arg>
                <name>enabled</name>
                <value>true</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>true</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Disable null password user present</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>external-sshd-root-login</name>
            <arg>
                <name>enabled</name>
                <value>false</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>false</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Allow remote login of root user via SSH</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>external-sshd-pubkey-auth</name>
            <arg>
                <name>enabled</name>
                <value>false</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>false</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Allow SSH password free login</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>external-sshd-weak-encryption</name>
            <arg>
                <name>enabled</name>
                <value>false</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>false</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Allow to use SSH weak encryption algorithm</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>external-pam-su-wheel</name>
            <arg>
                <name>enabled</name>
                <value>true</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>true</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Users outside the wheel group are prohibited from using the 'su root' command</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>external-hosts-login-limit</name>
            <arg>
                <name>allow-hosts</name>
                <value>""</value>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>List of IP addresses that allow remote access (comma separated)</_label>
                </layout>
            </arg>
            <arg>
                <name>deny-hosts</name>
                <value>""</value>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>List of IP addresses for which remote access is prohibited (comma separated)</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>external-profile-tmout</name>
            <arg>
                <name>tmout</name>
                <value>300</value>
                <rule>
                    <type>RANGE</type>
                    <value_range>
                        <min_value>300</min_value>
                    </value_range>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>If no operation is performed for more than the following time (seconds), the session exits</_label>
                </layout>
            </arg>
        </reinforcement>
        <reinforcement>
            <name>external-radio-switch</name>
            <arg>
                <name>enabled</name>
                <value>false</value>
                <rule>
                    <type>FIXED</type>
                    <value_fixed>false</value_fixed>
                </rule>
                <layout>
                    <widget_type>DEFAULT</widget_type>
                    <_label>Disable radio network</_label>
                </layout>
            </arg>
        </reinforcement>
    </body>
</ssr_rs>