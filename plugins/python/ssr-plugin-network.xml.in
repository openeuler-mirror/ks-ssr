<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<ssr_plugin>
    <name>network</name>
    <category>network</category>
    <_label>network settings</_label>
    <language_type>python</language_type>
    <available>true</available>
    <reinforcement>
        <name>network-firewalld-switch</name>
        <_label>Firewall configuration</_label>
        <_description>Configure system firewall rules</_description>
    </reinforcement>
    <reinforcement>
        <name>network-sysctl-icmp-redirect</name>
        <_label>ICMP redirection</_label>
        <_description>Protect against ICMP redirection attacks</_description>
    </reinforcement>
    <reinforcement>
        <name>network-sysctl-syn-flood</name>
        <_label>Syn flood attacks</_label>
        <_description>Protect against syn flood attacks</_description>
    </reinforcement>
    <reinforcement>
        <name>network-sysctl-source-route</name>
        <_label>IP source routing</_label>
        <_description>Prevent source address spoofing</_description>
    </reinforcement>
    <reinforcement>
        <name>network-icmp-timestamp</name>
        <_label>ICMP timestamp query</_label>
        <_description>Prevent attackers from attacking some time authentication based protocols</_description>
    </reinforcement>
    <reinforcement>
        <name>network-icmp-traceroute</name>
        <_label>Traceroute probe</_label>
        <_description>Preventing threats to hosts detected by traceroute</_description>
    </reinforcement>
    <reinforcement>
        <name>network-sysctl-high-risk-vulnerability</name>
        <_label>High risk vulnerability</_label>
        <_description>Disable high risk vulnerability services</_description>
    </reinforcement>
</ssr_plugin>