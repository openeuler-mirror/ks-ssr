<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<ssr_plugin>
    <name>config</name>
    <category>config</category>
    <_label>config settings</_label>
    <language_type>python</language_type>
    <available>true</available>
    <reinforcement>
        <name>config-sendmail-switch</name>
        <_label>Turn on sendmail service</_label>
        <_description>Avoid receiving malware via email and illegal attacks</_description>
    </reinforcement>
    <reinforcement>
        <name>config-history-size</name>
        <_label>Number of historical commands</_label>
        <_description>Restrict bash history commands</_description>
    </reinforcement>
    <reinforcement>
        <name>config-file-permissions</name>
        <_label>Important profile permissions</_label>
        <_description>Permission restrictions on important configuration files in the system</_description>
    </reinforcement>
    <reinforcement>
        <name>config-directory-permissions</name>
        <_label>Important directory permissions</_label>
        <_description>Restrict system key directory permissions</_description>
    </reinforcement>
    <reinforcement>
        <name>config-key-reboot</name>
        <_label>Turn on composite key reboot</_label>
        <_description>Set whether the system can be restarted through key combination</_description>
    </reinforcement>
    <reinforcement>
        <name>config-login-lock</name>
        <_label>Login failure lock</_label>
        <_description>Restrict the number of login failures and increase the cost of password cracking</_description>
    </reinforcement>
    <reinforcement>
        <name>config-password-expired</name>
        <_label>Account password validity period</_label>
        <_description>Restrict the maximum validity of passwords and add expiration reminders</_description>
    </reinforcement>
    <reinforcement>
        <name>config-password-complexity</name>
        <_label>Password complexity</_label>
        <_description>Enhance password security and prevent passwords from being cracked</_description>
    </reinforcement>
    <reinforcement>
        <name>config-resource-limits</name>
        <_label>System critical resource constraints</_label>
        <_description>Restrict the size of system critical resources</_description>
    </reinforcement>
    <reinforcement>
        <name>config-sak-key</name>
        <_label>Turn on SAK key</_label>
        <_description>When the Linux system cannot normally respond to user requests, you can use SAK key to control Linux</_description>
    </reinforcement>
    <reinforcement>
        <name>config-dmesg</name>
        <_label>Dmesg information</_label>
        <_description>Reinforce dmesg information</_description>
    </reinforcement>
    <reinforcement>
        <name>config-umask-limit</name>
        <_label>File directory default permission</_label>
        <_description>Restrict file directory default permissions</_description>
    </reinforcement>
</ssr_plugin>